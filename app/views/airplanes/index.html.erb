<h1>All Airplanes</h1>
<p><%= link_to "Create a new plane", new_airplane_path %></p>

<table class="table table-hover" style="background: #FFFFF0; opacity: .9;">
    <tr>
      <th>Name:</th>
      <th>Manufacturer:</th>
      <th>Year Made:</th>
      <th>Edit:</th>
      <th>Delete:</th>
    </tr>
  <% @airplanes.each do |plane| %>
    <tr>
      <td><%= link_to plane.name, airplane_path(plane) %></td>
      <td><%= plane.manufacturer %></td>
      <td><%= plane.year_made %></td>
      <td><%= link_to "edit", edit_airplane_path(plane) %></td>
      <td><%= button_to "delete", plane, method: :delete, class: "btn btn-lg btn-primary" %></td>
    </tr>
  <% end %>
</table>